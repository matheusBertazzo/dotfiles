{
	"Frontmatter metadata": {
		"prefix": ";;metadata",
		"body": [
			"---",
			"date: $CURRENT_YEAR-$CURRENT_MONTH-$CURRENT_DATE",
			"title: ${1:title}",
			"description: ${2:description}",
			"draft: ${3|false,true|}",
			"tags:",
			"\t- ${4:some_tag}",
			"---"
		],
		"description": "Adds frontmatter metadata to the document."
	},
	"Mermaid flowchart": {
		"prefix": ";;mermaid-flowchart",
		"body": [
			"```mermaid",
			"\tflowchart",
			"\t\t${1:node}",
			"```"
		],
		"description": "snippet-description"
	}
}
